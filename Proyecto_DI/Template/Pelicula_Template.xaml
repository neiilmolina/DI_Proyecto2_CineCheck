<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_DI.Template.Pelicula_Template"
             xmlns:mo="clr-namespace:Proyecto_DI.Modelo"
             x:DataType="mo:Pelicula">

    <Border Stroke="BlueViolet" StrokeThickness="3" Margin="16" Padding="10" HorizontalOptions="FillAndExpand" WidthRequest="325" HeightRequest="550">
        <Grid RowDefinitions="auto,auto,auto,auto">
            <Label Grid.Row="1" Text="{Binding title}"/>
            <HorizontalStackLayout Spacing="2" Grid.Row="2">
                <HorizontalStackLayout Spacing="2">
                    <Label Text="Votos: "/>
                    <Label Text="{Binding vote_average}"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="2">
                    <Label Text="Idioma: "/>
                    <Label Text="{Binding original_language}"/>
                </HorizontalStackLayout>
            </HorizontalStackLayout>
            <Label Grid.Row="3" Text="{Binding overview}"/>
        </Grid>
    </Border>
</ContentView>
